{
  "name": "openverse",
  "description": "Openverse is a search engine for openly-licensed content.",
  "private": true,
  "version": "0.0.0",
  "repository": "WordPress/openverse",
  "bugs": {
    "url": "https://github.com/WordPress/openverse/issues"
  },
  "author": "Openverse <openverse@wordpress.org>",
  "scripts": {
    "build:packages": "tsc -b packages/*",
    "build": "pnpm run build:packages && just frontend/run build"
  },
  "packageManager": "pnpm@7.17.1",
  "engines": {
    "node": ">= 16.0.0 <17",
    "pnpm": ">= 7.17.1"
  },
  "volta": {
    "node": "16.19.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "consola"
      ],
      "allowedVersions": {
        "babel-core": "7.0.0-bridge.0",
        "postcss": "5.2.18"
      }
    }
  },
  "devDependencies": {
    "@openverse/eslint-plugin": "file:packages/eslint-plugin"
  },
  "dependencies": {
    "eslint": "^8.28.0",
    "typescript": "^4.9.5"
  }
}
